#include <iostream>
#include <string>
using namespace std;

int main ( )
	{
    string word1, word2, input; 
while ( input != "No")
     { 
    cout << "Would you like to know which word is longer?\n";
    cout << "Please type Yes or No.\n";
    cin >> input;
    if (input == "Yes")
    {
      cout << "Yay, okay! Please enter a word\n";
      cin >> word1;
      cout << "Okay, now enter a second word, please!\n";
      cin >> word2;
   
  int l = word1.length();
  int m = word2.length();
      
     if (l == m)
      { 
    cout << "Wow! What are the chances? It appears that " << word1 << " and " << word2 << " have the same amount of letters!\n";
      }
       
     if (l > m)
    {
    cout << "It appears that " << word1 << " has "<< l << " letters, which is more letters than " << word2 << " has.\n";
    }
       
    if (l < m)
     {
    cout << "It appears that " << word2 << " has " << m << " letters, which is more letters than " << word1 << " has.\n";
      }
     }
     }
    if (input =="No")
   { 
    cout << "Dang, okay. have a good day, then.";
   }
  }
